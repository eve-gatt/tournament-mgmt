extends ../../layout/tournament-layout

block append styles
    style.
        .tool {
            display: grid;
            grid: auto-flow / auto 1fr;
            column-gap: 24px;
            grid-template-areas:
                 "form screenshots";
        }

        .tool form {
            grid-area: form;
        }

        .tool a {
            grid-area: screenshots;
            align-self: start;
            justify-self: center;
        }

        .tool img {
            max-width: 500px;
        }

        .pure-control-group + .pure-control-group {
            margin-top: 24px;
        }

        textarea {
            width: 600px;
            height: 200px;
            font-size: 80%;
        }

        textarea#red {
            border: 3px solid red;
            -webkit-box-shadow: inset 0 1px 3px red;
            box-shadow: inset 0 1px 3px red;
        }

        textarea#blue {
            border: 3px solid blue;
            -webkit-box-shadow: inset 0 1px 3px blue;
            box-shadow: inset 0 1px 3px blue;
        }

block content
    - var uuid = tournament.getString("uuid")

    mixin subtitle("Referee")

    .tool
        form.pure-form.pure-form-aligned(action="/auth/tournament/" + uuid + "/referee", method="POST")
            fieldset
                .pure-control-group
                    label(for="blue") Blue Team
                    textarea(name="blue", placeholder="paste from ref tool")#blue= form.getString("blue")
                .pure-control-group
                    label(for="red") Red Team
                    textarea(name="red", placeholder="paste from ref tool")#red= form.getString("red")

                .pure-controls
                    button.pure-button.pure-button-primary(type="submit") Validate

        .docs
            p.
                The following things may break the ref tool until a reboot.
            ul
                li Do not teleport team back to station once they're in the tournament system.
                li Do not try to end a match early.

            a(href="/assets/exefile_2020-10-13_16-56-24.png")
                img(src="/assets/exefile_2020-10-13_16-56-24.png")

