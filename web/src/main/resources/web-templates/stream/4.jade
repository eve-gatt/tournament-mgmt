extends ../../layout/streamer-layout

block styles
    style.
        .display {
            /*background-image: url("/assets/tmp/exefile_2020-10-17_20-52-11.png")*/
        }

        .overlay {
            display: grid;
            width: 1920px;
            grid: 860px auto / 270px 74px 1fr 74px 270px;
            grid-template-areas:
                ". ... . .... ."
                ". red . blue .";
            align-items: start;
            justify-items: start;
            font-size: 12px;
        }

        .pilots.red {
            grid-area: red;
        }

        .pilots.blue {
            grid-area: blue;
        }

block content

    .overlay
        .pilots.red
        .pilots.blue

block scripts
    script(src='/js/stream/ttoverlay.js')
