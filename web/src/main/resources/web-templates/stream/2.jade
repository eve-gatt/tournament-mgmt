extends ../../layout/streamer-layout

block styles
    style.
        .fixture {
            display: grid;
            grid: auto-flow / 1fr auto 1fr;
            place-items: center;
        }

        .pilots {
            display: flex;
            flex-wrap: wrap;
            width: 640px;
            justify-content: center;
            margin-bottom: 24px;
            font-size: 2em;
        }

        .pilot {
            margin: 2px 12px;
        }

        .team {
            text-align: center;
        }

        .team img {
            max-width: 360px;
            max-height: 360px;
        }

        .team div {
            color: #f99e00;
            text-align: center;
            font-size: 3em;
        }

        .vs {
            opacity: 0.6;
            font-size: 4em;
            text-align: center;
            border-radius: 50%;
            width: 140px;
            height: 140px;
            line-height: 132px;
            border: 10px solid #f99e00;
            background-color: #3a3a3a;
        }


block content
    .fixture
        .pilots.red
        .space
        .pilots.blue

        .team.red
            img
            div
        .vs vs
        .team.blue
            img
            div

block scripts
    script(src='/js/stream/match.js')
