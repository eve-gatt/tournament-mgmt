extends ../../layout/tournament-layout

block append styles
    style.

block content
    - var uuid = tournament.getString("uuid")

    mixin subtitle("Home")

    .tournament-info
        p
            span= tournament.getInteger("team_count")
            span &nbsp;teams registered
        p
            span= tournament.getInteger("pilot_count")
            span &nbsp;pilots registered
        if problems.size() > 0
            h3 Problems
            .problems
                each problem in problems
                    div= problem.getString("msg")
