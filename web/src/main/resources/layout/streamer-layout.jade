html
    head
        script(async, src="https://www.googletagmanager.com/gtag/js?id=UA-159453647-3")
        script.
            window.dataLayer = window.dataLayer || [];
            function gtag() {
                dataLayer.push(arguments);
            }
            gtag('js', new Date());
            gtag('config', 'UA-159453647-3');
        meta(charset='utf-8')
        meta(name='viewport', content='width=1920,height=1080,initial-scale=1.0')
        meta(name="google" content="notranslate")
        title Tournament Management
        link(rel="stylesheet",
            href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap")
        style.
            body {
                font-family: 'Poppins', sans-serif;
                padding: 0;
                margin: 0;
                background-color: rgba(0, 0, 0, 0);
            }

            a {
                color: white !important;
            }

            .display {
                /*background-color: white;*/
                border: 1px solid black;
                width: 1920px;
                height: 1080px;
                display: grid;
                grid: 1fr 40px / 1fr;
            }

            .header, .body {
                place-self: center;
                text-align: center;
            }

            .body {
                color: white;
                display: grid;
                grid: auto 1fr / 1fr;
                row-gap: 24px;
            }

            .body .pilots {
                display: grid;
                grid-template-columns: repeat(5, 1fr);
                gap: 40px;
            }

            .pilot {
                border: 3px solid #f99e00;
                border-radius: 3px;
                background-repeat: no-repeat;
                background-size: 210px 210px;
                width: 210px;
                height: 210px;
                display: grid;
                grid: 1fr 1fr / auto 1fr;
                grid-template-areas:
                    "ship ship"
                    "char pic";
                transition: transform 0.25s;
                transition-timing-function: ease-in-out;
            }

            .zoomed {
                transform: scale(3.0);
            }

            .pilot h2 {
                grid-area: ship;
            }

            .pilot h4 {
                grid-area: char;
                justify-self: start;
                align-self: end;
                margin: 2px 4px;
            }

            .pilot img {
                grid-area: pic;
                justify-self: end;
                align-self: end;
                width: 64px;
            }

            .teamname {
                font-size: 2em;
            }

            .orange {
                color: orange;
            }

            .white {
                color: white;
            }
        block styles
